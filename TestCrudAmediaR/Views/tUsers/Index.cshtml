@model IEnumerable<TestCrudAmediaR.Models.tUsers>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-dark table-striped table-hover align-middle">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.txt_user)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.txt_password)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.txt_nombre)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.txt_apellido)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.nro_doc)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.cod_rol)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.sn_activo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)

            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.txt_user)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.txt_password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.txt_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.txt_apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nro_doc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cod_rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sn_activo)
                    </td>
                    <td>

                    <td>
                        <a role="button" class="btn btn-success" href="@Url.Action("Edit","tUsers",new {id=@item.cod_usuario})">
                            <i class="bi bi-pencil-square"></i>
                        </a>

                    </td>

                    <td>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#Del1">
                            <i class="bi bi-x-lg"></i>
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="Del1" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                         aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content bg-dark">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Cuidado!</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Desea eliminar este registro?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">cerrar</button>
                                        <form method="post" action="@Url.Action("DeleteConfirmed","tUsers",new {id=@item.cod_usuario})" id="eliminar @item.cod_usuario">

                                            <input class="btn btn-danger" type="submit" value="ELIMINAR">
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

